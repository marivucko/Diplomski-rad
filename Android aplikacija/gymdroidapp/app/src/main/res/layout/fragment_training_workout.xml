<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/masterLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.training.TrainingStartFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/img_registration"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_registration"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/LoginLinearLayoutStyle">

            <LinearLayout
                android:id="@+id/trainingTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="15">

                <TextView
                    android:layout_marginTop="@dimen/margin_medium"
                    android:id="@+id/workoutNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="14.4"
                    style="@style/CardTitleStyle"/>

                <ImageView
                    android:layout_marginTop="@dimen/margin_small"
                    android:id="@+id/infoImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_details_black"
                    android:layout_weight="0.6"/>

            </LinearLayout>

            <TextView
                android:id="@+id/setDetailsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CardTextStyle"/>

            <LinearLayout
                android:id="@+id/setLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <Button
                android:id="@+id/doneButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                style="@style/CardButtonStyle"
                android:text="@string/done"/>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>