<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/corner_radius"/>
            <solid android:color="#08000000"/>
        </shape>
    </item>

    <item  android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/corner_radius"/>
            <solid android:color="#07000000" />
        </shape>
    </item>

    <item  android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/corner_radius"/>
            <solid android:color="#06000000" />
        </shape>
    </item>

    <item android:left="3dp" android:top="3dp" android:right="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/corner_radius"/>
            <solid android:color="#05000000" />
        </shape>
    </item>

    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="@color/colorGreen"
                android:endColor="@color/colorTurquoise"/>
            <corners android:radius="@dimen/corner_radius"/>
        </shape>
    </item>
</layer-list>