<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
        <shape>
            <gradient
                android:startColor="@color/colorBlueDark"
                android:endColor="@color/colorPurpleDark"
                />
            <corners
                android:topLeftRadius="@dimen/corner_radius_small"
                android:topRightRadius="@dimen/corner_radius_small"
                android:bottomRightRadius="@dimen/corner_radius_small"
                android:bottomLeftRadius="@dimen/corner_radius_medium"
                />
        </shape>
    </item>

    <item android:left="2dp" android:top="1dp" android:right="2dp" android:bottom="4dp">
        <shape>
            <gradient
                android:startColor="@color/colorBlue"
                android:endColor="@color/colorPurple"
                />
            <corners
                android:topLeftRadius="@dimen/corner_radius_small"
                android:topRightRadius="@dimen/corner_radius_small"
                android:bottomRightRadius="@dimen/corner_radius_small"
                android:bottomLeftRadius="@dimen/corner_radius_medium"
                />
        </shape>
    </item>

</layer-list>