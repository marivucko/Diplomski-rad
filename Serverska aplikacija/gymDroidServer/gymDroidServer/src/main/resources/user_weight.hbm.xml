<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.gymdroid.domain.beans.UserWeight" table="user_weight">
        <id name="weightId" type="int" column="weightId">
            <generator class="native"/> 
        </id> 
        <property name="weight" column="weight" type="double"/>
        <property name="weightNote" column="weightNotes" type="string"/>
        <property name="weightDate" column="weightDate" type="timestamp"/>
        <property name="userId" column="userId" type="int"/>
        <property name="createdAt" column="createdAt" type="timestamp"/>
        <property name="updatedAt" column="updatedAt" type="timestamp"/>
        <property name="deletedAt" column="deletedAt" type="timestamp"/>
    </class>
</hibernate-mapping>
